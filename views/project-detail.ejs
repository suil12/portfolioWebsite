<!-- views/project-detail.ejs -->
<%- include('partials/header') %>
<%- include('partials/nav') %>

<main>
    <section class="project-detail">
        <div class="back-link">
            <a href="/projects"><i class="fas fa-arrow-left"></i> Torna ai progetti</a>
        </div>
        
        <div class="project-header">
            <h1><%= project.title %></h1>
        </div>
        
        <div class="project-content">
            <div class="project-image-large">
                <img src="<%= project.image %>" alt="<%= project.title %>">
            </div>
            
            <div class="project-description">
                <h2>Descrizione del progetto</h2>
                <p><%= project.description %></p>
                
                <h2>Tecnologie utilizzate</h2>
                <div class="technologies-list">
                    <% project.technologies.forEach(tech => { %>
                        <span class="tech-tag"><%= tech %></span>
                    <% }) %>
                </div>
                
                <div class="project-links">
                    <a href="<%= project.github %>" target="_blank" class="btn github-btn">
                        <i class="fab fa-github"></i> Codice su GitHub
                    </a>
                    <a href="<%= project.demo %>" target="_blank" class="btn demo-btn">
                        <i class="fas fa-external-link-alt"></i> Demo Live
                    </a>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include('partials/footer') %>