<!-- views/contact.ejs -->
<%- include('partials/header') %>
<%- include('partials/nav') %>

<main>
    <section class="page-header">
        <h1>Contact me</h1>
        <p>You have a project in mind? Let's discuss it</p>
    </section>

    <section class="contact-section">
        <div class="contact-info">
            <div class="info-item">
                <i class="fas fa-envelope"></i>
                <h3>Email</h3>
                <p>souhail_12@icloud.com</p>
            </div>
            
            <div class="info-item">
                <i class="fas fa-phone"></i>
                <h3>Phone</h3>
                <p>+39 351 882 5590</p>
            </div>
            
            <div class="info-item">
                <i class="fas fa-map-marker-alt"></i>
                <h3>City</h3>
                <p>Novara, Italy</p>
            </div>
            
            <div class="social-links">
                <a href="https://github.com/suil12" target="_blank"><i class="fab fa-github"></i></a>
                <a href="https://linkedin.com/in/souhail-nm" target="_blank"><i class="fab fa-linkedin"></i></a>
            </div>
        </div>
        
        <div class="contact-form">
            <% if (typeof success !== 'undefined') { %>
                <div class="success-message">
                    <i class="fas fa-check-circle"></i> <%= success %>
                </div>
            <% } %>
            
            <% if (typeof error !== 'undefined') { %>
                <div class="error-message">
                    <i class="fas fa-exclamation-circle"></i> <%= error %>
                </div>
            <% } %>
            
            <form action="/contact" method="POST">
                <div class="form-group">
                    <label for="name">Complete Name</label>
                    <input type="text" id="name" name="name" required value="<%= typeof formData !== 'undefined' ? formData.name || '' : '' %>">
                </div>
                
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required value="<%= typeof formData !== 'undefined' ? formData.email || '' : '' %>">
                </div>
                
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea id="message" name="message" rows="5" required><%= typeof formData !== 'undefined' ? formData.message || '' : '' %></textarea>
                </div>
                
                <button type="submit" class="btn submit-btn">Send Message</button>
            </form>
        </div>
    </section>
</main>

<%- include('partials/footer') %>